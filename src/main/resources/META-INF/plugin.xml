<!-- See https://www.jetbrains.org/intellij/sdk/docs/basics/plugin_structure/plugin_configuration_file.html -->
<idea-plugin url="https://github.com/jmerle/quantconnect-intellij-plugin">
    <id>com.jaspervanmerle.qcij</id>
    <name>QuantConnect for IntelliJ</name>
    <vendor email="jaspervmerle@gmail.com" url="https://jaspervanmerle.com">Jasper van Merle</vendor>

    <description><![CDATA[
    QuantConnect for IntelliJ is an unofficial QuantConnect plugin for IntelliJ-based IDE's like Rider and PyCharm which provides tight integration between the IDE and QuantConnect. It provides a cross-platform alternative to the official Visual Studio plugin. Its main features are file syncing and running backtests from inside the IDE.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- TODO(jmerle): Create tool windows -->
    </extensions>

    <!-- idea-version attribute is added by the patchPluginXml Gradle task -->
    <!--suppress PluginXmlValidity -->
    <applicationListeners>
        <listener class="com.jaspervanmerle.qcij.FileListener"
                  topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
    </applicationListeners>

    <actions>
        <group id="com.jaspervanmerle.qcij.action.ActionGroup" text="QuantConnect" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </group>
        <action id="com.jaspervanmerle.qcij.action.SyncAction" class="com.jaspervanmerle.qcij.action.SyncAction"
                text="Sync" description="Synchronize projects and libraries">
            <add-to-group group-id="com.jaspervanmerle.qcij.action.ActionGroup" anchor="last"/>
        </action>
        <action id="com.jaspervanmerle.qcij.action.RunBacktestAction"
                class="com.jaspervanmerle.qcij.action.RunBacktestAction" text="Run Backtest"
                description="Run a backtest">
            <add-to-group group-id="com.jaspervanmerle.qcij.action.ActionGroup" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
